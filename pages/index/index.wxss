/**index.wxss**/

.title {
	display: flex;
	flex: 2;
	width: 100vw;
	flex-direction: row;
	align-items: center;
	justify-content: center;
}

.avatar {
	width: 128rpx;
	height: 128rpx;
	margin: 20rpx;
	border-radius: 50%;
}

.nickname {
	/* color: #aaa; */
	font-family: "FontAwesome"!important;
	font-size: 16px;
	font-style: normal;
	font-weight: normal;
}

.content {
	flex: 8;
	display: flex;
	flex-direction: column;
}

.row {
	display: flex;
	flex-direction: row;
	margin: 5rpx;
	height: 25vw;
}

.btn {
	display: flex;
	align-items: center;
	justify-content: center;
	margin: 5rpx;
	padding: 5rpx;
	line-height: 1.8;
	word-spacing: 20rpx;
	text-align: center;
	width: 23vw;
}

.row button::after {
	border: 0;
}